@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<div class="p-8">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-10">
    <h2 class="text-4xl mb-4"> <strong>Welcome to ProSupply</strong></h2>
        <p class="text-gray-600 text-lg">Your trusted platform for managing suppliers, companies, orders, and build business relationships.</p>
    <NavLink href="/explore" class="hero-button inline-block mt-6 bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition">
        Explore ProSupply
    </NavLink>
</div>

    <section class="row g-3 mt-4">
        <div class="col-12 col-md-6">
            <div class="card h-100 text-center border-0 shadow-sm suppliersCard">
                <div class="card-body py-4">
                    <div class="mb-3">
                        <i class="bi bi-building-fill" style="font-size: 32px;"></i>
                    </div>
                    <h3 class="mb-2"><strong>Suppliers</strong></h3>
                    <p class="text-muted small mb-3">Find, compare, and order from reliable suppliers.</p>
                    <a href="/suppliers" class="btn btn-sm btn-outline-primary">View Suppliers</a>
                </div>
            </div>
        </div>


        <div class="col-12 col-md-6">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body py-4">
                    <div class="mb-3">
                        <i class="bi bi-buildings-fill text-success" style="font-size: 32px;"></i>
                    </div>
                    <h3 class="mb-2"> <strong>Companies</strong></h3>
                    <p class="text-muted small mb-3">Acess our Companies Listing.</p>
                    <a href="/companies" class="btn btn-sm btn-outline-success">View Company</a>
                </div>
            </div>
        </div>
    </section>

</div>
